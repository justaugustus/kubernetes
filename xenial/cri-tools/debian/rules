#!/usr/bin/make -f
# -*- makefile -*-

CRI_TOOLS_VERSION = {{ .Version }}

build:
	echo noop

binary:
	mkdir -p ./bin
	curl -sSL --fail --retry 5 \
		"https://github.com/kubernetes-incubator/cri-tools/releases/download/v$(CRI_TOOLS_VERSION)/crictl-v$(CRI_TOOLS_VERSION)-linux-{{ .Arch }}.tar.gz" \
		| tar -C ./bin -xz
	dh_testroot
	dh_auto_install
	dh_shlibdeps
	dh_install
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

%:
	dh $@
